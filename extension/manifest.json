{
	"manifest_version": 2,
	"name": "Googley Styles for Rizzoma",
	"version": "1.3",
	"description": "Changes the Rizzoma interface to look like Gmail and other Google apps.",
	"icons": {
		"48": "icon_48.png",
		"128": "icon_128.png"
	},
	
	"permissions": [
		"cookies",
		"*://rizzoma.com/topic/*",
		"*://pre.rizzoma.com/topic/*"
	],
	
	"content_scripts": [{
		"matches": [
			"*://rizzoma.com/topic/*",
			"*://pre.rizzoma.com/topic/*"
		],
		"css": [
			"panels.css",
			"buttons.css",
			"popups.css",
			"wave.css",
			"toolbars.css"
		]
	}],
	
	"background": {
		"scripts": ["setcookie.js"],
		"persistent": false
	}
}
